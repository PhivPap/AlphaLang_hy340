/* ======== FOR LOOP - print the series and add all elements to sum ======== */
terms = 7;
first = 1;
sum = 0;
ratio = 3;

value = first;
print("GP SERIES (first:2, ratio:3)\n");
for(i = 0; i < terms; i++) {
    print(value);
    print("  ");
    sum = sum + value;
    value = value * ratio;
}

print("\nSum of the GP series till ");
print(terms);
print(" terms is ");
